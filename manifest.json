{
  "manifest_version": 3,
  "name": "Basecamp To Slack",
  "version": "1.0",

  "description": "Adds a copy link for each TODO in Basecamp that copies the title and link in Slack format for easy copy pasting.",
  "homepage_url": "https://github.com/aapomm/basecamp-to-slack",
  "icons": {
    "48": "icons/link.png"
  },

  "permissions": ["clipboardWrite"],

  "content_scripts": [
    {
      "matches": ["*://*.basecamp.com/*"],
      "js": ["basecopify.js"],
      "css": ["basecopify.css"]
    }
  ]
}

